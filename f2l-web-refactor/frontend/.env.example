# F2L Web Refactor Frontend Environment Variables

# API Configuration
VITE_API_BASE_URL=http://localhost:8001
VITE_API_VERSION=v1

# WebSocket Configuration
VITE_WS_URL=http://localhost:8001

# Production Configuration (for Docker)
# VITE_API_BASE_URL=http://backend:8000
# VITE_WS_URL=http://backend:8000

# Application Configuration
VITE_APP_NAME=F2L Sync
VITE_APP_VERSION=2.0.0
VITE_APP_DESCRIPTION=File-to-Local Sync Management System

# Development Configuration
VITE_DEV_MODE=true
VITE_DEBUG_ENABLED=false

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Performance Configuration
VITE_ENABLE_SERVICE_WORKER=false
VITE_CACHE_ENABLED=true

# Security Configuration
VITE_ENABLE_CSP=true
